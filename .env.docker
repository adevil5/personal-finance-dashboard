# Docker Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
DB_NAME=personal_finance
DB_USER=pfd_user
DB_PASSWORD=change_this_secure_password
DB_HOST=db
DB_PORT=5432

# Redis Configuration
REDIS_PASSWORD=change_this_redis_password
REDIS_HOST=redis
REDIS_PORT=6379

# Django Settings
SECRET_KEY=change_this_to_a_very_long_random_string
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Email Configuration (Development - uses MailHog)
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://:change_this_redis_password@redis:6379/1
CELERY_RESULT_BACKEND=redis://:change_this_redis_password@redis:6379/2

# Application Ports
WEB_PORT=8000
VITE_PORT=5173

# PgAdmin Configuration (optional)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# Encryption Key for PII fields
FIELD_ENCRYPTION_KEY=generate_this_with_python_cryptography_fernet

# File Storage
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=

# Monitoring
SENTRY_DSN=
ENABLE_PROMETHEUS=False
